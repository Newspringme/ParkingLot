<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnzk.mapper.UserMapper">
    <!--    根据车牌查用户-->
    <select id="carfinduser" resultType="com.cnzk.pojo.TbUser">
       select tu.user_name from tb_user tu left join tb_car tc on tu.car_id = tc.car_id where tc.car_num = #{carnum}
    </select>

    <select id="caraddenter" >
       insert into tb_enter (enter_time,car_num) values (#{starttime},#{carnum})
    </select>

</mapper>